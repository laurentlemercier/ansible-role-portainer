#jinja2: lstrip_blocks: True, trim_blocks: True
{
  "TemplatesURL": "{{ templates_url }}",
  {% if company_logo_url != 'url_to_company_logo' %}
  "LogoURL": "{{ company_logo_url }}",
  {% endif %}
  "DisplayDonationHeader": false,
  "DisplayExternalContributors": false,
  "AuthenticationMethod": {{ auth_method | int | default(1)}},
  {% if auth_method == 2 %}
  "LDAPSettings": {
    "ReaderDN": "{{ ldap_account }}",
    "Password": "{{ ldap_account_password }}",
    "URL": "{{ ldap_url }}:{{ ldap_port }}",
    "TLSConfig": {
      "TLS": "{{ tls_enabled }}",
      "TLSSkipVerify": "{{ tls_skipverify }}"
    },
    "StartTLS": "{{ start_tls }}",
    "SearchSettings": [
      {
        "BaseDN": "{{ ldap_base_dn }}",
        "Filter": "{{ ldap_filter }}",
        "UserNameAttribute": "{{ ldap_username_attribute }}"
      }
    ],
    "AutoCreateUsers": true
  },
  {% endif %}
  "AllowBindMountsForRegularUsers": {{ allow_bindmounts_users | bool | lower }},
  "AllowPrivilegedModeForRegularUsers": {{ allow_privileged_users| bool | lower  }}
}
